<% if @user.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @user, url: profil_path, class: 'form-horizontal' do |f|%>

    <% if @user.avatar %>
      <%= image_tag @user.avatar_url %>
    <% end %>
    <div class="form-group">
      <%=	f.label :avatar_file, "Avatar", class: 'col-md-4 control label' %>
      <div class="col-md-6">
        <%=	f.file_field :avatar_file, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%=	f.label :username, "Nom d'utilisateur", class: 'col-md-4 control label' %>
      <div class="col-md-6">
        <%=	f.text_field :username, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%=	f.label :email, "Email", class: 'col-md-4 control label' %>
      <div class="col-md-6">
        <%=	f.email_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%=	f.label :firstname, "Prenom", class: 'col-md-4 control label' %>
      <div class="col-md-6">
        <%=	f.text_field :firstname, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%=	f.label :lastname, "Nom", class: 'col-md-4 control label' %>
      <div class="col-md-6">
        <%=	f.text_field :lastname, class: 'form-control' %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-md-6">
        <button type="submit" class="btn btn-primary">Modifier le profil</button>
      </div>
    </div>



<% end %>
