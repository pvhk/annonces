<h1>Nouvelle Annonce</h1>
<% if @annonce.errors.any? %>
<div class="alert alert-danger">
  <%@annonce.errors.full_messages.each do |message|%>
  <li><%= message %></li>
  <% end %>
</div>
<% end %>
<%= form_for @annonce do |f|%>
<div class="form-group">
  <label>Titre de votre annonce</label>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <label>Description
  </label>
  <%= f.text_area :description, class: 'form-control' %>
</div>

<div class="form-group">
  <label>Prix</label>
  <%= f.text_field :prix, class: 'form-control' %>
</div>

<div class="form-group">
  <%=	f.label :picture_file, "Ajouter une image Ã  votre annonce :", class: 'col-md-4 control label' %>
  <div class="col-md-6">
    <%=	f.file_field :picture_file, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <button type="submit" class="btn btn-primary">Mettre en vente</button>
</div>
<% end %>
