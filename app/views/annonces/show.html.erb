      <b><%= @annonce.name%></b>
    </h2>
  </br>
  <p class="description">
    <b>Description :</b>
  </br><%= @annonce.description %></p>
  <ul>
  <%= render(partial: 'options/option', collection: @annonce.options) %>
</ul>
<button class="btn btn-success">Acheter</button>
</div>
<% end %>
</div>
