<div class="row">
  <% if @annonce.picture %>
  <div id="carouselExampleControls" class="carousel slide col-lg-7" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <%= image_tag(@annonce.picture_url, :class =>"d-block img-fluid")  %>
      </div>
      <div class="carousel-item">
        <%= image_tag(@annonce.picture_url, :class =>"d-block img-fluid")  %>
      </div>
